.side-bar
  .header
    .header__box
      %h3.header__box__name
        = current_user.name
      %ul.header__box__lists
        %li.list
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'icon')
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups--group
        = link_to '#' do
          .side-bar__groups--group--name
            = group.name
          .side-bar__groups--group--text
            まだメッセージはありません